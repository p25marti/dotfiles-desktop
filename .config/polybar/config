[bar/main]
width = 100%
height = 18
offset-x = 2%
offset-y = 2%
bottom = false
fixed-center = false
line-size = 2

background = ${color.bg}
foreground = ${color.fg}


font-0 = Hack:pixelsize=10;3
font-1 = Fantasque Sans Mono:pixelsize=10;3
font-2 = Noto Sans Symbols2:pixelsize=10;3

cursor-click = pointer
cursor-scroll = ns-resize

scroll-up = i3wm-wsnext
scroll-down = i3wm-wsprev

[bar/primary]
inherit = bar/main
monitor = DVI-D-0
modules-left = i3
modules-right = volume date

[bar/secondary]
inherit = bar/main
monitor = HDMI-A-1
modules-left = i3

