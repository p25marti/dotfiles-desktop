[color]
trans = #00000000
white = #FFFFFF
black = #000000

bg = #1F1F1F
fg = #FFFFFF
fg-alt = #A9ABB0

acolor = #FFFFFF
curgent = #EF5350
coccupied = #42A5F5

shade1 = #1B5E20
shade2 = #2E7D32
shade3 = #388E3C
shade4 = #43A047
shade5 = #4CAF50
shade6 = #66BB6A
shade7 = #81C784
shade8 = #A5D6A7
ashade8 = #2C2C2C

;==========================================================

[bar/main]
width = 100%
height = 18
offset-x = 2%
offset-y = 2%
bottom = false
fixed-center = true
line-size = 1

background = ${color.bg}
foreground = ${color.fg}

font-0 = "Hack::pixelsize=10;3"
font-1 = "Fantasque Sans Mono:pixelsize=10;3"
font-2 = "Iosevka Nerd Font:pixelsize=13;3"
font-3 = "Noto Music:pixelsize=10;3"
font-4 = "Noto Sans Symbols2:pixelsize=10;3"


[bar/primary]
inherit = bar/main
monitor = DVI-D-0
modules-left = i3 
modules-center = spotify 
modules-right = vpn memory cpu volume network date

[bar/secondary]
inherit = bar/main
monitor = HDMI-A-1
modules-left = i3
modules-center = spotify

;==========================================================
;== Module Location ========================================================

 
;== Modules ========================================================

[module/i3]
type = internal/i3
pin-workspaces = true
index-sort = true
enable-click = false
enable-scroll = false
wrapping-scroll = false
reverse-scroll = false

label-focused = %index%
label-focused-background = ${color.shade2}
label-focused-padding = 1

label-visible = %index%
label-visible-padding = 1
label-visible-background = ${color.shade2}

label-unfocused = %index%
label-unfocused-padding = 1

[module/volume]
type = internal/alsa
format-volume = <ramp-volume> <label-volume>
format-volume-padding = 2
format-volume-background = ${color.shade3}
label-volume = %percentage%%
label-muted = "婢"
label-muted-background = ${color.shade3}
label-muted-padding = 2

ramp-volume-0 = 奄
ramp-volume-1 = 奄
ramp-volume-2 = 奔
ramp-volume-3 = 奔
ramp-volume-4 = 墳
ramp-volume-5 = 墳
ramp-volume-6 = 墳

[module/network]
type = custom/script
exec = ~/.config/polybar/scripts/check-network
format-background = ${color.shade2}
format-padding = 2
tail = true

[module/date]
type = internal/date
interval = 30
label =  %time%
label-padding = 2
label-background = ${color.shade1}
time =  %I:%M %p
time-alt =  %Y-%m-%d

[module/cpu]
type = internal/cpu
format = <label> <ramp-coreload>
format-padding = 2
format-background = ${color.shade4}

; Available tokens:
;   %percentage% (default) - total cpu load averaged over all cores
;   %percentage-sum% - Cumulative load on all cores
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = CPU

; Spacing between individual per-core ramps
ramp-coreload-spacing = 1
ramp-coreload-0 = ▁
ramp-coreload-1 = ▂
ramp-coreload-2 = ▃
ramp-coreload-3 = ▄
ramp-coreload-4 = ▅
ramp-coreload-5 = ▆
ramp-coreload-6 = ▇
ramp-coreload-7 = █

[module/memory]
type = internal/memory
interval = 3
format-padding = 2
format-background = ${color.shade5}
label = RAM %gb_used%/%gb_total%

[module/vpn]
type = custom/script
exec = ~/.config/polybar/scripts/vpn
interval = 3
label-padding = 2

[module/spotify]
type = custom/script
interval = 1
format-prefix = "🎧 "
format = <label>
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}'

